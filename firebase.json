{
    "database": {
        "rules": "database.rules.json"
    },
    "functions": {
        "runtime": "nodejs12",
        "source": ".functions",
        "ignore": ["cards.*", "*.ts"]
    },
    "hosting": {
        "public": ".website",
        "rewrites": [
            {"source": "/api/game", "function": "createGame"},
            {"source": "/api/submit", "function": "submitGame"}
        ]
    }
}
