{
    "scripts": {
        "build": "run-s build:func:* build:web",
        "build:web": "parcel build website/index.html -d .website --no-source-maps",
        "build:func:dir": "mkdir -p .functions",
        "build:func:package": "cpy functions/package.json .functions",
        "build:func:bundle": "microbundle build --entry functions/index.ts --output .functions --target node",
        "build:func:index": "cpy .functions/cards.js .functions --rename index.js",
        "deploy:func": "firebase deploy --only functions",
        "dev": "parcel -d .dist website/index.html",
        "fmt": "prettier --list-different --write --ignore-path .gitignore \"**/*.{js,ts,tsx,html,md,json}\""
    },
    "dependencies": {
        "firebase-admin": "^9.6.0",
        "firebase-functions": "^3.11.0",
        "firebase-tools": "^9.10.0",
        "jsonwebtoken": "^8.5.0",
        "microbundle": "^0.13.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "rickety": "^4.0.0",
        "styled-components": "^5.2.3",
        "typescript": "^4.2.4"
    },
    "devDependencies": {
        "@types/jsonwebtoken": "^8.3.2",
        "@types/react": "^17.0.3",
        "@types/react-dom": "^17.0.3",
        "@types/styled-components": "^5.1.9",
        "cpy-cli": "^3.1.1",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.12.0",
        "prettier": "^2.2.1"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all",
        "bracketSpacing": false,
        "arrowParens": "always"
    }
}
